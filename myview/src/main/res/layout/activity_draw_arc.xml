<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DrawArcActivity">
    <com.example.myview.view.DrawArcView
        android:id="@+id/draw_arc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        myview:percent_background_color="@android:color/darker_gray"
        myview:percent_circle_gravity="bottom"
        myview:percent_circle_progress="30"
        myview:percent_circle_radius="50dp"
        myview:percent_progress_color="@android:color/holo_blue_light" />
</RelativeLayout>